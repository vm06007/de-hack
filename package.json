{
    "name": "dehack",
    "type": "module",
    "version": "1.0.0",
    "description": "DeHack - Decentralized Hackathon Platform",
    "devDependencies": {
        "@nomicfoundation/hardhat-ignition": "^3.0.0-next.32",
        "@nomicfoundation/hardhat-ignition-viem": "^3.0.0-next.32",
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0-next.32",
        "@nomicfoundation/hardhat-verify": "^3.0.0-next.32",
        "@nomicfoundation/hardhat-viem": "^3.0.0-next.32",
        "@types/node": "^22.15.32",
        "concurrently": "^8.2.2",
        "dotenv": "^16.5.1",
        "forge-std": "1.1.2",
        "hardhat": "^3.0.0-next.32",
        "typescript": "~5.8.0",
        "viem": "^2.31.3"
    },
    "scripts": {
        "dev": "concurrently \"bun run backend\" \"bun run frontend\"",
        "backend": "cd backend-python && ./start.sh",
        "frontend": "cd dashboard-builder && bun run dev",
        "intro": "cd intro && python3 -m http.server 8080",
        "compile": "hardhat compile",
        "test": "npx hardhat test",
        "deploy:counter": "hardhat ignition deploy ignition/modules/Counter.ts",
        "deploy:factory": "hardhat ignition deploy ignition/modules/HackathonFactory.ts --network mainnet",
        "deploy:factory:local": "hardhat ignition deploy ignition/modules/HackathonFactory.ts",
        "deploy:factory:curve": "hardhat ignition deploy ignition/modules/HackathonFactory.ts --network mainnet --reset",
        "verify:factory": "bun run scripts/verify-factory.ts"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.4.0",
        "fhevm": "^0.6.2",
        "fhevm-contracts": "^0.2.4"
    }
}
